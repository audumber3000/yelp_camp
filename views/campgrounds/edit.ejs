<%- include("../partials/header") %>

<div class= container>
	
	<div class="card" style="margin:50px">
  

	<div>
		<div style="text-align:center ;  margin:20px">
		<h3>
			Edit the Campground!
		</h3>
	</div>
		
		
	<div style="width: 22rem ; margin:50px auto">
		
		
		
		
<form action="/campground/<%= campground.id %>?_method=PUT"  method="post">
  <div class="form-group">
  <input type="text" class="form-control" name="name" value="<%=campground.name%>" aria-describedby="emailHelp" placeholder="Name">
  </div>
	
  <div class="form-group">
   <input type="text" class="form-control" name="image"  value="<%=campground.image%>" placeholder="campground @url">
  </div>
	
	<div class="form-group">
    <textarea class="form-control" name="description"  value="<%=campground.description%> "rows="3">Enter the description</textarea>
   </div>
	
 
	 <div class="form-group">
  
  <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
	</div>
	<a href="/campground" >Go back</a>
</form>
		
		
		
		
</div>
</div>
</div>



<%- include("../partials/footer") %>